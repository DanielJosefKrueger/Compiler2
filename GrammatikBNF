


PROGRAM ::= BLOCK '$'



BLOCK = CONSTDECL VARDECL PROCDECL  STATEMENT | VARDECL PROCDECL  STATEMENT |  PROCDECL  STATEMENT




CONSTASS ::= IDENT '=' INUMBER

CONSTASSIGNS ::= CONSTASS | CONSTASSIGNS ',' CONSTASS

CONSTDECL ::= const CONSTASSIGNS ';'




VARASS ::= IDENT ':' TYP

VARASSIGNS ::= VARASS | VARASSIGNS ',' VARASS

VARDECL ::= var CONSTASSIGNS ';'








STATEMENTS ::= STATEMENT ';'  STATEMENTS

STATEMENTREPLACEMENT ::= begin STATEMENT | STATEMENTS end


ELSEREPLACEMENT ::= STATEMENT | STATEMENT 'else' STATEMENT

STATEMENT ::=   IDENT ':=' EXPRESSION |
                CALL ident |
                STATEMENTREPLACEMENT |
                if CONDITION then ELSEREPLACEMENT fi |
                while CONDITION do STATEMENT

CONDITION ::= EXPRESSION RELOP EXPRESSION

RELOP ::= = | != | < | <= | > | >=



TERMS ::=  '+' TERM | '-' TERM | '+' TERM TERMS | '-' TERM TERMS

EXPRESSION ::= TERM | TERM TERMS



FACTORS ::= '/' FACTOR | '*' FACTOR | '/' FACTOR FACTORS | '*' FACTOR FACTORS

TERM ::= FACTOR | FACTOR FACTORS

FACTOR ::= IDENT | NUMBER | '(' EXPRRESSION ')'





LETTERREPLACEMENT ::= LETTER | LETTER LETTERREPLACEMENT

IDENT = LETTERREPLACEMENT

NUMBER = INTNUMBER | REALNUMBER



DIGITS ::= DIGIT | DIGIT DIGITS

INTNUMBER ::= DIGITS

REALNUMBER ::=  DIGITS '.' DIGITS




LETTER ::= A-Z | a-z | 0-9
TYP ::= int | real
